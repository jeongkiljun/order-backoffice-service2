root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 150
disabled_rules = import-ordering

[*.{yml, yaml}]
indent_size = 2

[**/test/**.kt]
disabled_rules=no-wildcard-imports
